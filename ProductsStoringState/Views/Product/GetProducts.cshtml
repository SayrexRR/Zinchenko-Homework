@using ProductsStoringState.BusinessLayer.Models;
@model IEnumerable<ProductModel>


<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(p => p.Name)</th>
            <th>@Html.DisplayNameFor(p => p.Price)</th>
            <th>@Html.DisplayNameFor(p => p.InStock)</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@Html.DisplayFor(p => product.Name)</td>
                <td>@Html.DisplayFor(p => product.Price)</td>
                <td>@Html.DisplayFor(p => product.InStock)</td>
            </tr>
        }
    </tbody>
</table>