@using BindingModelMvc.BusinessLayer.Models
@model UserModel

@{
    ViewData["Title"] = "Delete";
}

<h2>Delete</h2>
<hr />

<div>
    <h4>User</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(u => u.UserName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(u => u.UserName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(u => u.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(u => u.Email)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(u => u.Password)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(u => u.Password)
        </dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="UserId" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index">Back to Users</a>
    </form>
</div>