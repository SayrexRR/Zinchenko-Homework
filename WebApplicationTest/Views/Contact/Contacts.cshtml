@using WebApplicationTest.BussinessLayer.Models
@model IEnumerable<Contact>

<h1>Contacts</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(m => m.Name)
            </th>
            <th>
                @Html.DisplayNameFor(m => m.Email)
            </th>
            <th>
                @Html.DisplayNameFor(m => m.Phone)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (Contact contact in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => contact.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => contact.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => contact.Phone)
                </td>
            </tr>
        }
    </tbody>
</table>
